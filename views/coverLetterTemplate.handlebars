                </div>
            </div>
            <div class="bodyContent">
                <div class="descriptionLetter">
                    {{{data.descriptionLetter}}}
                </div>
            </div>
        </div>
    </div>
    {{/when}}
    {{#when data.label 'eq' "letterC" }}
