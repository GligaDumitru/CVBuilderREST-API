        <div class="bd" style="background-image: url({{{data.textBackgroundColor}}});color:{{{data.textColor}}}">
            {{#when data.typeOfBusinessCard 'eq' "color" }}
            <aside class="left" style="background-color: {{{data.leftBackgroundColor}}};">
                {{#if data.imageLink}}
                <div class="logo imageIn">
                    <span class="helper"></span>
                    {{#if data.imageLink}}
                    <img src={{data.imageLink}} alt="" />
                    {{/if}}
                    {{#if data.qrCodeTextImg}}
                    <img src={{data.imageLink}} alt="" />
                    {{/if}}
                </div>
                {{/if}}
                {{#if data.qrCodeTextImg}}
