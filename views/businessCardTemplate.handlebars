                    {{/if}}
                    {{#if data.qrCodeTextImg}}
                    <img src={{data.qrCodeTextImg}} alt="" />
                    {{/if}}
                </div>
                {{/if}}
            </aside>
            {{/when}}

            <aside class="right">
                <div class="defaultText name">
                    <span>
                        {{data.name}}
                    </span>
                </div>
                <div class="defaultText position">
                    <span>
                        {{data.jobTitle}}
                    </span>
                </div>
                <div class="defaultText organization">
                    <span>
                        {{data.companyName}}
                    </span>
                </div>
                <div class="defaultText address">
